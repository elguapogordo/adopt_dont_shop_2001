<h1>List of Pets</h1>

<% @pets.each do |pet| %>

  <ul>
    <li><h3><a href="/pets/<%= pet.id %>"><%= pet.name %></a></h3></li>
    <li><h3><a href="/shelter/<%= pet.shelter_id %>"><%= pet.shelter.name %></a></h3></li>
    <li><%= pet.age %></li>
    <li><%= pet.sex %></li>
    <li><%= pet.description %></li>
    <li><img src="<%= pet.image %>"></li>
  </ul>

<% end %>

<h3><a href="/shelters/<%= @shelter.id %>/pets/new">Create Pet</a></h3>
